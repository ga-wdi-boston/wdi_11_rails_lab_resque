<h1>Guestbook</h1>

<h2>Leave a note!</h2>
<%= render partial: 'form' %>

<table id="notes">
  <thead>
    <tr>
      <th>Note</th>
      <th>Posted on</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.note %></td>
        <td><%= time_ago_in_words(note.created_at) %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

