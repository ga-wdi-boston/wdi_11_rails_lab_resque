<h3>All Posts</h3>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Note</th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.email %></td>
      <td><%= post.name %></td>
      <td><%= post.note %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create New Post', new_post_path %>
